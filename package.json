{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://huolalatech.github.io/page-spy-web/",
  "repository": {
    "type": "git",
    "url": "https://github.com/HuolalaTech/page-spy"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts ./packages",
    "lint:fix": "eslint --ext .js,.ts --fix ./package",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,md,json}'"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "lerna": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "yorkie": "^2.0.0"
  }
}
